@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link href="~/Content/materialize.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="~/scripts/vegas/vegas.min.css" rel="stylesheet" />
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Conheça a Cantina Dona Bella</title>
</head>

<body>
    <div id="preload" class="preload"></div>
    <!--SLIDE MATERIALIZE-->
    <section id="home">
        <nav class="nav_menu">
            <div class="nav-wrapper">
                <a href="#!" class="brand-logo opcaomenu">Dona Bella</a>
                <a href="#" data-activates="mobile-demo" class="button-collapse opcaomenu"><i class="material-icons">menu</i></a>
                <ul class="right hide-on-med-and-down">
                    <li><a href="#home" class="opcaomenu">Home</a></li>
                    <li><a href="#bemvindo" class="opcaomenu">Sobre</a></li>
                    <li><a href="#empresa" class="opcaomenu">Conheça</a></li>
                    <li><a href="#harvin" class="opcaomenu">Harvin</a></li>
                    <li><a href="#cardapio" class="opcaomenu">Cardápio</a></li>
                    <li><a href="#reserva" class="opcaomenu">Reserva</a></li>
                </ul>
                <ul class="side-nav" id="mobile-demo">
                    <li><a href="#home" class="opcaomenu">Home</a></li>
                    <li><a href="#bemvindo">Sobre</a></li>
                    <li><a href="#empresa">Conheça</a></li>
                    <li><a href="#harvin">Harvin</a></li>
                    <li><a href="#cardapio">Cardápio</a></li>
                    <li><a href="#reserva">Reserva</a></li>
                </ul>
            </div>
        </nav>

        <div class="slider">
            <ul class="slides">
                <li>
                    <img src="~/Content/images/images/fazerpedido.png" />
                    <div class="caption left-align">
                        <h3>Faça seu Pedido pelo Celular</h3>
                        <h5 class="light grey-text text-lighten-3">Seu pedido chegará na mesa</h5>
                        <a href="#bemvindo" class="btn">Conheça</a>
                        <a href="@Url.Action("Login", "Clientes")" class="btn">Peça</a>
                    </div>
                </li>
                <li>
                    <img src="~/Content/images/images/background5.jpg" />
                    <div class="caption left-align">
                        <h3>Cantina Dona Bella</h3>
                        <h5 class="light grey-text text-lighten-3">A melhor pizzaria de SJP</h5>
                        <a href="#bemvindo" class="btn">Conheça</a>
                    </div>
                </li>
                <li>
                    <img src="~/Content/images/images/background6.jpg" />
                    <div class="caption left-align">
                        <h3>Várias opções de Pizzas</h3>
                        <h5 class="light grey-text text-lighten-3">Porções, bebidas e pastéis</h5>
                        <a href="#cardapio" class="btn">Conheça</a>
                    </div>
                </li>
                <li>
                    <img src="~/Content/images/images/delivery.jpg" />
                    <div class="caption left-align">
                        <h3>Aproveite em casa</h3>
                        <h5 class="light grey-text text-lighten-3">Faça agora sua encomenda</h5>
                        <a href="@Url.Action("Login", "Clientes")" class="btn">Fazer Pedido</a>
                    </div>
                </li>
            </ul>
        </div>
    </section>

    <section id="pizzaria" style="top:50px;">
        <div class="container">
            <div class="row">
                <div class="col s12">
                    <h1>Pizzaria</h1>
                    <hr>
                </div>
                <div class="col s12 m4 l3">
                    <img class="materialboxed" width="100%;" src="http://cantinadonabella.com.br/site/wp-content/gallery/teste2/600872_346645645461968_1964756754_n.jpg">
                </div>
                <div class="col s12 m4 l3">
                    <img class="materialboxed" width="100%;" src="http://cantinadonabella.com.br/site/wp-content/gallery/teste2/601084_346645668795299_1027732145_n.jpg">
                </div>
                <div class="col s12 m4 l3">
                    <img class="materialboxed" width="100%;" src="http://cantinadonabella.com.br/site/wp-content/gallery/teste2/935925_346645268795339_862419964_n.jpg">
                </div>
                <div class="col s12 m4 l3">
                    <img class="materialboxed" width="100%;" src="http://cantinadonabella.com.br/site/wp-content/gallery/teste2/945877_346645272128672_1122767044_n.jpg">
                </div>
                <div class="col s12 m4 l3">
                    <img class="materialboxed" width="100%;" src="http://cantinadonabella.com.br/site/wp-content/gallery/teste2/968858_346646425461890_2137634785_n.jpg">
                </div>
            </div>
        </div>
    </section>

    <footer id="footer">
        <div class="container">
            <div class="row">
                <div class="col s12 m4">
                    <h1>Sobre nós</h1>
                    <hr>
                    <p>
                        Somos uma pizzaria e restaurante com mais de 20 anos de mercado, atuando no bairro São Marcos em São José dos Pingais.
                    </p>
                </div>
                <div class="col s12 m4">
                    <h1>Contato</h1>
                    <hr>
                    <p>
                        (41) 3382-4036
                    </p>
                </div>
                <div class="col s12 m4">
                    <h1>Facebook</h1>
                    <hr>
                    <a href="https://www.facebook.com/cantinadonabella"><img src="images/facebook.png" alt="Icone facebook azul" target="_blank" /></a>
                </div>
            </div>
        </div>
    </footer>

    <div class="copyright">
        Powered by <a href="https://harvin.com.br" style="color: white;" target="_blank">Harvin</a>
    </div>
    <!--Import jQuery before materialize.js-->
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="~/scripts/vegas/vegas.min.js"></script>
    <script src="~/scripts/materialize.min.js"></script>
    <script type="text/javascript">
      $(document).ready(function(){
        $('.slider').slider({
          transition: 1000,
          interval: 4500,
        });
        $('.scrollspy').scrollSpy();
        $('.collapsible').collapsible();
        $('.carousel').carousel();
        $(".button-collapse").sideNav();
      });
    </script>

    <!--VEGAS-->
    <script type="text/javascript">
      $(".pizzas").vegas({
        timer:false,
        delay:2000,
        slides: [
        { src: "http://cantinadonabella.com.br/site/wp-content/gallery/teste2/600872_346645645461968_1964756754_n.jpg" },
        { src: "http://cantinadonabella.com.br/site/wp-content/gallery/teste2/601084_346645668795299_1027732145_n.jpg" },
        { src: "http://cantinadonabella.com.br/site/wp-content/gallery/teste2/935925_346645268795339_862419964_n.jpg" },
        { src: "http://cantinadonabella.com.br/site/wp-content/gallery/teste2/945877_346645272128672_1122767044_n.jpg" },
        { src: "http://cantinadonabella.com.br/site/wp-content/gallery/teste2/968858_346646425461890_2137634785_n.jpg" },
        ],
        overlay: '~/scripts/vegas/overlays/01.png',
      });
    </script>

    <!-- GIF PAGE LOADING -->
    <script type="text/javascript">
        $(document).ready(function(){
            setTimeout('$("#preload").fadeOut(700)', 3500);
        });
    </script>

    <script type="text/javascript">
    $(document).ready(function(){
      window.addEventListener("scroll", function() {
        if (window.scrollY > 50) {
          $('.nav_menu').css({"background-color": "#FFF", "transition-property": "all", "transition-duration": "0.5s"});
          $('.opcaomenu').css('color', '#000');
        }else{
          $('.nav_menu').css({"background-color": "transparent", "transition-property": "all", "transition-duration": "0.5s"});
          $('.opcaomenu').css('color', '#fff');
        }
      })
    });
    </script>
</body>
</html>
