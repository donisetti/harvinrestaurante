<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Harvin</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/Content/materialize.min.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400" rel="stylesheet">

</head>
<body>
    <div class="navbar-fixed">
        <!--DROPDOWNS DO MENU PARA COMPUTADORES-->

        <!--FUNCIONÁRIOS-->
        <ul id="funcionarios" class="dropdown-content" style="width: 150px!important;">
            <li><a href="@Url.Action("Create", "Funcionarios")"><i class="material-icons">add</i>Novo</a></li>
            <li><a href="@Url.Action("Index", "Funcionarios")"><i class="material-icons">account_circle</i>Detalhes</a></li>
            <li><a href="@Url.Action("Todos", "Funcionarios")"><i class="material-icons">list</i>Lista</a></li>
        </ul>

        <!--PRODUTOS-->
        <ul id="produtos" class="dropdown-content" style="width: 150px!important;">
            <li><a href="@Url.Action("Create", "Produtos")"><i class="material-icons">add</i>Novo</a></li>
            <li><a href="@Url.Action("Index", "Produtos")"><i class="material-icons">local_pizza</i>Detalhes</a></li>
            <li><a href="@Url.Action("Todos", "Produtos")"><i class="material-icons">list</i>Lista</a></li>
            <li><a href="@Url.Action("Index", "Categorias")"><i class="material-icons">dns</i>Categoria</a></li>
        </ul>

        <!--PEDIDOS-->
        <ul id="pedidos" class="dropdown-content" style="width: 150px!important;">
            <li><a href="@Url.Action("Create", "Pedidos")"><i class="material-icons">add</i>Novo</a></li>
            <li><a href="@Url.Action("Index", "Pedidos")"><i class="material-icons">restaurant_menu</i>Abertos</a></li>
            <li><a href="@Url.Action("Todos", "Pedidos")"><i class="material-icons">list</i>Lista</a></li>
        </ul>

        <!--USUARIOS-->
        <ul id="usuario" class="dropdown-content" style="width: 150px!important;">
            <li><a href="@Url.Action("Create", "Pedidos")"><i class="material-icons">settings</i>Editar</a></li>
            <li><a href="@Url.Action("Index", "Pedidos")"><i class="material-icons">info</i>Infos</a></li>
            <li style="background-color: darkred;"><a href="@Url.Action("Todos", "Pedidos")"><i class="material-icons">highlight_off</i>Sair</a></li>
        </ul>

        <!-- NAVBAR -->
        <nav class="z-depth-0 cordefundodomenu">
            <div class="container">
                <div class="nav-wrapper">
                    <a href="@Url.Action("Index", "Inicial")" class="brand-logo">
                        Harvin
                    </a>
                    <ul id="nav-mobile" class="right hide-on-med-and-down">
                        <li><a class="dropdown-button opcaomenu" href="#!" data-activates="pedidos">Pedidos<i class="material-icons right">arrow_drop_down</i></a></li>
                        <li><a class="dropdown-button opcaomenu" href="#!" data-activates="produtos">Produtos<i class="material-icons right">arrow_drop_down</i></a></li>
                        <li><a class="dropdown-button opcaomenu" href="#!" data-activates="funcionarios">Funcionários<i class="material-icons right">arrow_drop_down</i></a></li>
                        <li><a class="dropdown-button opcaomenu" href="#!" data-activates="usuario"><i class="material-icons left">account_circle</i>Patrick</a></li>
                    </ul>
                    <main class="hide-on-large-only">
                        <a class="toggle-overlay"><i class="small material-icons">menu</i></a>
                    </main>
                </div>
            </div>
        </nav>
    </div>
    <!-- MENU MOBILE -->
    <aside>
        <div class="outer-close toggle-overlay">
            <a class="white-text right close"><i class="margin-clear small material-icons">clear</i></a>
        </div>
        <nav class="mobile-menu">
            <ul>
                <li><a href="@Url.Action("Configuracoes", "Inicial")" class="opcaomenu">Configurações</a></li>
                <li><a href="@Url.Action("Index", "Produtos")" class="opcaomenu">Produtos</a></li>
                <li><a href="@Url.Action("Index", "Categorias")" class="opcaomenu">Categorias</a></li>
                <li><a href="@Url.Action("Index", "Cargos")" class="opcaomenu">Cargos</a></li>
                <li><a href="@Url.Action("Index", "Funcionarios")" class="opcaomenu">Funcionarios</a></li>
                <li><a href="@Url.Action("FazerPedido", "Pedidos")" class="opcaomenu">Pedidos</a></li>
            </ul>
        </nav>
    </aside>

    <div class="body_content">
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/scripts/materialize.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.collapsible').collapsible();
            $(".button-collapse").sideNav();
            $('.toggle-overlay').click(function () {
                $('aside').toggleClass('open');
            });
            $('.modal').modal();
            $('select').material_select();
        });
    </script>
</body>
</html>