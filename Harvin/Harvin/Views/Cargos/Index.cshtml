@model IEnumerable<Harvin.Models.Cargo>

@{
    ViewBag.Title = "Cargos";
}

<h2>Cargos</h2>

<p>
    @Html.ActionLink("Cadastrar novo Cargo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descricao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.cargoId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.cargoId }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.cargoId })
        </td>
    </tr>
}

</table>
