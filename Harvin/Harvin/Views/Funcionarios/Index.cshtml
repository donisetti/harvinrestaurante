@model IEnumerable<Harvin.Models.Funcionario>

@{
    ViewBag.Title = "Funcionários";
    List<Harvin.Models.Cargo> ListaCargos = new List<Harvin.Models.Cargo>();
    ListaCargos = Harvin.DAO.CargoDAO.RetornaCargos();
}

<h4>funcionários</h4>
<p>Aqui você consegue consultar toda relação de funcionários do estabelecimento, tal como suas informações pessoais e dados referentes aos seus respectivos acessos a este sistema.</p>

<p>
    <blockquote><i class="material-icons">add</i> Novo Funcionário</blockquote>
    <blockquote><i class="material-icons">assignment</i> Lista de Funcionários</blockquote>
</p>

<p style="margin: 30px;">
    <a href="@Url.Action("Create")" class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">add</i></a>
    <a href="@Url.Action("Todos")" class="btn-floating btn-large waves-effect waves-light blue"><i class="material-icons">assignment</i></a>
</p>

<hr />

<div class="row">
    @foreach (var item in Model) {
        <div class="col s6 m4">
            <div class="card">
                <div class="card-image waves-effect waves-block waves-light">
                    <img class="activator" src="@item.imagem">
                </div>
                <div class="card-content">
                    <span class="card-title activator grey-text text-darken-4">@item.nome @item.sobrenome</span>
                </div>
                <div class="card-reveal">
                    <span class="card-title grey-text text-darken-4"><i class="material-icons">close</i></span>
                    <b>Nome Completo</b>
                    <br />
                    @item.nome @item.sobrenome
                    <br />
                    <br />
                    <b>Cargo</b>
                    <br />
                    @item.cargo.nome
                    <br />
                    <br />
                    <b>CPF</b>
                    <br />
                    @item.cpf
                    <br />
                    <br />
                    <b>Telefone</b>
                    <br />
                    @item.telefone
                    <br />
                    <br />
                    <b>Data de Nascimento</b>
                    <br />
                    @item.dataDeNascimento
                    <br />
                    <br />
                    <b>Endereço</b>
                    <br />
                    @item.endereco
                    <br />
                    <br />
                    <b>CEP</b>
                    <br />
                    @item.cep
                    <br />
                    <br />
                    <b>Bairro</b>
                    <br />
                    @item.bairro
                    <br />
                    <br />
                    <b>Cidade</b>
                    <br />
                    @item.cidade
                    <br />
                    <br />
                    <b>E-mail</b>
                    <br />
                    @item.email
                    <br /><br />
                    <a href="@Url.Action("Edit", new { id=item.id})" class="btn-floating btn-large waves-effect waves-light green"><i class="material-icons">mode_edit</i></a>
                    <a href="@Url.Action("Delete", new { id=item.id})" class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">delete</i></a>
                </div>
            </div>
        </div>
    }
</div>