@model Harvin.Models.Cliente

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
    <link href="~/Content/style_login_cliente.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Raleway:300" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400" rel="stylesheet">
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body>
    <div class="block center" style="width: 70%; margin: auto; height: 400px; border-radius: 85px;" class="z-depth-5">
        <div class="row" style="border-radius: 15px!important;">
            <div class="col s12 l6 esquerda z-depth-5">
                <img style="margin-top: 50px;" src="~/Content/images/icon.png" />
                <h1 style="margin-top: -15px;" class="white-text center">Harvin</h1>
                <p class="white-text">Tenha acesso a uma plataforma de pedidos completa.</p>
                <p class="white-text">Com o harvin você mesmo realiza seu pedido diretamente da tela do seu celular, computador ou tablet.</p>
                <a href="@Url.Action("")" class="btn" style="background-color: green;">Crie sua conta</a>
                
            </div>
            <div class="col s12 l6 direita">
                <form>
                    <div class="container">
                        <div class="row">
                            <h4>Login</h4>
                            <p class="center" style="font-weight: 800;">Favor entre com seu login e senha</p>
                            @using (Html.BeginForm()) {
                                @Html.AntiForgeryToken()
                                <div class="row">
                                    <div class="input-field col s12">
                                        @Html.EditorFor(model => model.cpf, new { @class = "validate" })
                                        <label for="icon_prefix" style="color: white;">E-mail</label>
                                    </div>

                                    <div class="input-field col s12">
                                        @Html.EditorFor(model => model.senha, new { @class = "validate" })
                                        <label for="icon_prefix" style="color: white;">E-mail</label>
                                    </div>
                                </div>

                                <p style="red-text">@ViewBag.Mensagem</p>

                                <button class="btn waves-effect waves-light" type="submit" style="border-radius: 20px; background-color: #4242b5;">
                                    Entrar
                                    <i class="material-icons right">send</i>
                                </button>
                                <br><br>
                                <a href="#" class="white-text" class="z-depth-5">Esqueceu seu login?</a>
                            }
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!--Import jQuery before materialize.js-->
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
</body>
</html>